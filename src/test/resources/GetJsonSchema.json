{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "books": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "author": {
              "type": "string"
            },
            "id": {
              "type": "integer"
            },
            "isElectronicBook": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            },
            "year": {
              "type": "integer"
            }
          },
          "additionalProperties": false,
          "required": [
            "author",
            "id",
            "isElectronicBook",
            "name",
            "year"
          ]
        }
      ]
    }
  },
  "required": [
    "books"
  ]
}